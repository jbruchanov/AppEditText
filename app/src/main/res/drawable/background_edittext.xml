<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_error="true" android:state_focused="true">
        <shape>
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#F00" />
        </shape>
    </item>
    <item app:state_error="true"  android:state_focused="false">
        <shape>
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#B00000" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="?colorAccent" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#666" />
        </shape>
    </item>
</selector>