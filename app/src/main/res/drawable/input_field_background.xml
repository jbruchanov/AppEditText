<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="false" app:state_error="true">
        <shape>
            <solid android:color="@color/input_field_disabled_error_filling" />
            <corners android:radius="@dimen/input_field_radius" />
            <stroke android:width="@dimen/input_field_stroke_width" android:color="@color/input_field_error_focused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/input_field_radius" />
            <stroke android:width="@dimen/input_field_stroke_width" android:color="@color/input_field_text" />
        </shape>
    </item>
</selector>