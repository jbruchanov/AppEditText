<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawableStates">
        <!-- State value for {@link android.graphics.drawable.StateListDrawable StateListDrawable},
             set when a view has input focus. -->
        <attr name="state_error" format="boolean" />
        <attr name="state_success" format="boolean" />

        <!-- custom states -->
        <attr name="state_pwd_strength_bad" format="boolean" />
        <attr name="state_pwd_strength_weak" format="boolean" />
        <attr name="state_pwd_strength_good" format="boolean" />
        <attr name="state_pwd_strength_perfect" format="boolean" />
    </declare-styleable>

    <attr name="labelTextAppearance"></attr>

    <declare-styleable name="AppEditText">
        <attr name="compoundDrawableStartTitle" format="string" />
        <attr name="compoundDrawableEndTitle" format="string" />
        <attr name="compoundDrawableEndBehaviour" format="enum">
            <enum name="none" value="0" />
            <enum name="clear" value="1" />
            <enum name="password" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SuperTextDrawable">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:textAppearance" />
        <attr name="android:gravity" />
        <attr name="android:padding" />
        <attr name="android:paddingHorizontal" />
        <attr name="android:paddingVertical" />
        <attr name="android:font" />
        <attr name="android:fontFamily" />
        <attr name="android:textStyle" />
        <attr name="android:minWidth"/>
        <attr name="android:minHeight" />
    </declare-styleable>

    <declare-styleable name="CustomTextAppearance">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:gravity" />
        <attr name="android:padding" />
        <attr name="android:paddingHorizontal" />
        <attr name="android:paddingVertical" />
        <attr name="android:font" />
        <attr name="android:fontFamily" />
        <attr name="android:textStyle" />
        <attr name="android:minWidth"/>
        <attr name="android:minHeight" />
    </declare-styleable>

</resources>